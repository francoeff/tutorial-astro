---
import BlogPost from "../../components/BlogPost.astro";
import BaseLayout from "../../layouts/BaseLayouts.astro";

export async function getStaticPaths() {
  const allPosts = await Astro.glob('../posts/*.md');

  const uniqueTags = [...new Set(allPosts.flatMap( post => post.frontmatter.tags || []))];

  return uniqueTags.map((tag) => { 
    const postFiltered = allPosts.filter((post) => post.frontmatter.tags?.includes(tag));
    return {
      params: { tag },
      props: {posts: postFiltered}
    };
  })
}

const { tag } = Astro.params;
const { posts } = Astro.props;

---

<BaseLayout pageTitle={tag}>
  <p>Entradas etiquetadas con {tag}</p>
  <ul>
    {posts.map((post) => <BlogPost url={post.url} title={post.frontmatter.title} />)}
  </ul>
</BaseLayout>
